{
  "manifest_version": 2,
  "name": "Arbitrary Headers",
  "version": "1.0",
  "description": "Allows you to set arbitrary headers on your requests.",
  "permissions": ["webRequest", "webRequestBlocking", "<all_urls>", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html"
  }
}
